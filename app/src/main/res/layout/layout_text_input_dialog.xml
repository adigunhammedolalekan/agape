<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@color/white">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Type your message"
        android:layout_marginBottom="5dp"
        android:id="@+id/edt_text_input_dialog"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0/240"
        android:maxLength="240"
        android:id="@+id/tv_text_counter_text_input_dialog"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:orientation="horizontal">
        <net.steamcrafted.materialiconlib.MaterialIconView
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:materialIcon="lightbulb_on"
            app:materialIconColor="@color/red"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:text="We will use a nice random text if this field left empty"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
</LinearLayout>